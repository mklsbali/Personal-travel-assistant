<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="255dp"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:longClickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagine"
            android:layout_width="231dp"
            android:layout_height="257dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/categorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="7dp"
                android:text="categorie"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="7dp"
                android:text="timp"
                android:textAlignment="textStart"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="7dp"
                android:text="km"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/descriere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="7dp"
                android:text="descriere"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="10sp" />

            <!-- SPECIFICE -->
            <TextView
                android:id="@+id/linie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="7dp"
                android:text="linie"
                android:visibility="gone"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/caloriiArse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="7dp"
                android:text="caloriiArse"
                android:visibility="gone"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/pretAprox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="7dp"
                android:text="pretAprox"
                android:visibility="gone"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/numarMasina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="7dp"
                android:text="numarMasina"
                android:visibility="gone"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/umplutura"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-thin"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="10sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>